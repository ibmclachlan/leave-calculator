<body>
    <div class="container">
        <h1>Annual Leave Balance Calculator</h1>
        <p class="subtitle">Calculate your projected annual leave balance</p>

        <form id="leaveForm">
            <div class="form-group">
                <label for="currentBalance">Current Leave Balance (hours)</label>
                <input type="number" id="currentBalance" step="0.01" required>
                <div class="helper-text">As shown on your most recent payslip</div>
            </div>

            <div class="form-group">
                <label for="payslipDate">Payslip Date</label>
                <input type="date" id="payslipDate" required>
            </div>

            <div class="form-group">
                <label for="targetDate">Calculate Balance As At</label>
                <input type="date" id="targetDate" required>
                <div class="helper-text">Defaults to today</div>
            </div>

            <div class="form-group">
                <label for="hoursPerFortnight">Hours Worked Per Fortnight</label>
                <input type="number" id="hoursPerFortnight" value="75" step="0.01" required>
            </div>

            <div class="form-group">
                <label for="annualLeaveWeeks">Annual Leave Entitlement (weeks)</label>
                <input type="number" id="annualLeaveWeeks" value="4" step="0.01" required>
                <div class="helper-text">Standard entitlement is 4 weeks</div>
            </div>

            <div class="form-group">
                <label for="leaveTaken">Leave Taken Since Payslip (hours)</label>
                <input type="number" id="leaveTaken" value="0" step="0.01" required>
                <div class="helper-text">Any leave used between payslip date and target date</div>
            </div>

            <div class="error" id="error"></div>

            <button type="submit">Calculate Balance</button>
        </form>

        <div class="results" id="results">
            <h2>Calculation Breakdown</h2>
            
            <div class="result-row">
                <span class="result-label">Starting Balance</span>
                <span class="result-value" id="startBalance"></span>
            </div>

            <div class="result-row">
                <span class="result-label">Time Period</span>
                <span class="result-value" id="timePeriod"></span>
            </div>

            <div class="result-row">
                <span class="result-label">Fortnights Elapsed</span>
                <span class="result-value" id="fortnightsElapsed"></span>
            </div>

            <div class="result-row">
                <span class="result-label">Accrual Rate</span>
                <span class="result-value" id="accrualRate"></span>
            </div>

            <div class="result-row">
                <span class="result-label">Leave Accrued</span>
                <span class="result-value" id="leaveAccrued"></span>
            </div>

            <div class="result-row">
                <span class="result-label">Leave Taken</span>
                <span class="result-value" id="leaveTakenDisplay"></span>
            </div>

            <div class="final-balance">
                <div class="final-balance-label">Projected Balance</div>
                <div class="final-balance-value" id="finalBalance"></div>
                <div class="final-balance-subtext" id="finalBalanceWeeks"></div>
            </div>
        </div>
    </div>

    <script>
        // Set default target date to today
        document.getElementById('targetDate').valueAsDate = new Date();

        document.getElementById('leaveForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Clear previous error
            const errorDiv = document.getElementById('error');
            errorDiv.classList.remove('show');
            
            // Get form values
            const currentBalance = parseFloat(document.getElementById('currentBalance').value);
            const payslipDate = new Date(document.getElementById('payslipDate').value);
            const targetDate = new Date(document.getElementById('targetDate').value);
            const hoursPerFortnight = parseFloat(document.getElementById('hoursPerFortnight').value);
            const annualLeaveWeeks = parseFloat(document.getElementById('annualLeaveWeeks').value);
            const leaveTaken = parseFloat(document.getElementById('leaveTaken').value);
            
            // Validation
            if (targetDate < payslipDate) {
                errorDiv.textContent = 'Target date cannot be before payslip date';
                errorDiv.classList.add('show');
                return;
            }
            
            // Calculate annual entitlement in hours
            const annualEntitlementHours = (annualLeaveWeeks * hoursPerFortnight) / 2;
            
            // Calculate accrual per fortnight
            const accrualPerFortnight = annualEntitlementHours / 26;
            
            // Calculate days between dates
            const daysDifference = Math.floor((targetDate - payslipDate) / (1000 * 60 * 60 * 24));
            
            // Calculate fortnights (including partial)
            const fortnightsElapsed = daysDifference / 14;
            
            // Calculate accrued leave
            const leaveAccrued = fortnightsElapsed * accrualPerFortnight;
            
            // Calculate final balance
            const finalBalance = currentBalance + leaveAccrued - leaveTaken;
            
            // Calculate balance in working days (7.5 hours per day)
            const balanceInDays = finalBalance / 7.5;
            
            // Display results
            document.getElementById('startBalance').textContent = `${currentBalance.toFixed(2)} hours`;
            
            const options = { year: 'numeric', month: 'short', day: 'numeric' };
            document.getElementById('timePeriod').textContent = 
                `${payslipDate.toLocaleDateString('en-NZ', options)} to ${targetDate.toLocaleDateString('en-NZ', options)}`;
            
            document.getElementById('fortnightsElapsed').textContent = 
                `${fortnightsElapsed.toFixed(2)} fortnights (${daysDifference} days)`;
            
            document.getElementById('accrualRate').textContent = 
                `${accrualPerFortnight.toFixed(2)} hours/fortnight`;
            
            document.getElementById('leaveAccrued').textContent = 
                `${leaveAccrued.toFixed(2)} hours`;
            
            document.getElementById('leaveTakenDisplay').textContent = 
                `${leaveTaken.toFixed(2)} hours`;
            
            document.getElementById('finalBalance').textContent = 
                `${finalBalance.toFixed(2)} hours`;
            
            document.getElementById('finalBalanceWeeks').textContent = 
                `Equivalent to ${balanceInDays.toFixed(2)} working days`;
            
            // Show results with animation
            document.getElementById('results').classList.add('show');
            
            // Smooth scroll to results
            document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        });
    </script>
</body>
